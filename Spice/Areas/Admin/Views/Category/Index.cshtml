@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border background-white">
    <div class="row">
        <div class="col-sm-6">
            <h2 class="text-info">Category List</h2>
        </div>
        <div class="col-sm-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if(Model.Count() > 0)
        {

        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                <th></th>
            </tr>
            @foreach (var category in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => category.Name)
                    </td>
                    <td class="text-right">
                        DETAILS | EDIT | DELETE
                    </td>
                </tr>
            }
        </table>
        }
        else
        {
            <p>No Categories currently exist. You can start adding new Categories by clicking the <b>Create New</b> button above.</p>
        }
    </div>
</div>